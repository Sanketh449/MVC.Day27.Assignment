@using MVC.Day27.Assignment.Models
@model Product

@{
    ViewBag.Title = "AddNew";
}

<h2>Add New Product</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="col-6">
            @using (Html.BeginForm())
            {
                <div class="mb-2">
                    @Html.LabelFor(p => p.SKU_NO)
                    @Html.TextBoxFor(p => p.SKU_NO, new { @class = "form-control" })
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.ProductName)
                    @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.Price)
                    @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.Description)
                    @Html.TextBoxFor(p => p.Description, new { @class = "form-control" })
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.IsAvailable)
                    @Html.TextBoxFor(p => p.IsAvailable, new { @class = "form-control" })
                </div>
                <div class="mb-2">
                    @Html.LabelFor(p => p.CategoryId)
                    @Html.DropDownListFor(p => p.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), new { @class = "form-select" })
                </div>
                <div class="mb-2">
                    <button type="submit" class="btn btn-outline-primary">Save</button>
                    <button type="reset" class="btn btn-danger">Reset</button>
                </div>
            }
        </div>
    </div>
</div>